<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PdfViewer;assembly=Syncfusion.Maui.PdfViewer"
             xmlns:local="clr-namespace:Localization"
             x:Class="Localization.MainPage">

    <ContentPage.BindingContext>
        <local:RightToLeftViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label Text="Localization" HorizontalOptions="StartAndExpand" FontSize="Large"/>
            </Grid>
            <Grid Grid.Row="1">
                <syncfusion:SfPdfViewer 
        x:Name="PdfViewer"
        DocumentSource="{Binding DocumentStream}"
        />
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
