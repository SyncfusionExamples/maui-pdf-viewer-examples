<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pv="clr-namespace:Syncfusion.Maui.PdfViewer;assembly=Syncfusion.Maui.PdfViewer"
             x:Class="Flatten.MainPage">

    <Grid RowDefinitions="50,*">
        <pv:SfPdfViewer x:Name="pdfViewer" Grid.Row="1"/>
        <HorizontalStackLayout HorizontalOptions="Start">
            <Button Text="&#xe75f;" 
                FontFamily="Maui Material Assets"
                Clicked="Button_Clicked"
                HorizontalOptions="Start"></Button>
            <Button Text="Flatten annotations" Clicked="Button_Clicked_4"></Button>
            <Button Text="Flatten formfields" Clicked="Button_Clicked_6"></Button>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
