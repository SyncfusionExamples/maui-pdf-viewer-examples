<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TextMarkups"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PdfViewer;assembly=Syncfusion.Maui.PdfViewer"        
    x:Class="TextMarkups.MainPage">
    <ContentPage.BindingContext>
        <local:PdfViewerViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="BorderWidth" Value="0" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="FontFamily" Value="{OnPlatform iOS=PdfViewerIcon, MacCatalyst=PdfViewerIcon, Android=PdfViewerIcon.ttf#, WinUI=PdfViewerIcon.ttf#PdfViewerIcon}" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="#99000000" />
                                <Setter Property="BackgroundColor" Value="Transparent" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Disabled">
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="#44000000" />
                                <Setter Property="BackgroundColor" Value="Transparent" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <VisualState.Setters>
                                <Setter Property="TextColor" Value="#99000000" />
                                <Setter Property="BackgroundColor" Value="#0F000000" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" HeightRequest="40" BackgroundColor="#FFF6F6F6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{OnPlatform Default=Auto, Android=1*, iOS=1*}"/>
                    <ColumnDefinition Width="{OnPlatform Default=*, Android=1*, iOS=1*}"/>
                </Grid.ColumnDefinitions>
                <HorizontalStackLayout Grid.Column="0" Spacing="8" Margin="8,0,0,0"
                        HorizontalOptions="Start">
                    <Button Text="&#xe700;"
                        PropertyChanged="Button_PropertyChanged"
                        Command="{Binding OpenFileCommand}"
                        IsVisible="{OnPlatform MacCatalyst=false}"/>
                    <Button Text="&#xe75f;" FontSize="18" x:Name="Save" FontFamily="Maui Material Assets" Clicked="Save_Clicked" Margin="0,0,3,0"/>
                    <Button x:Name="Import" Text="&#xe782;" FontSize="18" FontFamily="Maui Material Assets" Margin="0,0,3,0" Clicked="Import_Clicked"/>
                    <Button x:Name="Export" Text="&#xe781;" FontSize="18" FontFamily="Maui Material Assets" Margin="0,0,3,0" Clicked="Export_Clicked"/>
                </HorizontalStackLayout >
                <HorizontalStackLayout 
                        Grid.Column="1"
                        HorizontalOptions="End">
                    <Button  x:Name="TextMarkup" Opacity="0.6" Text="&#xe72e;" FontSize="18" FontFamily="Maui Material Assets" Margin="4,0,0,0" Clicked="ShowTextMarkup_Clicked" />
                    <Button Text="&#xe744;" Background="Transparent" Margin="4,0,0,0"  FontSize="16" x:Name="Undo" FontFamily="Maui Material Assets" Command="{Binding Path=UndoCommand,Source={x:Reference PdfViewer}}"/>
                    <Button Text="&#xe745;" Background="Transparent" Margin="4,0,0,0" FontSize="18" x:Name="Redo" FontFamily="Maui Material Assets" Command="{Binding Path=RedoCommand,Source={x:Reference PdfViewer}}"/>
                </HorizontalStackLayout>
            </Grid>
            <Grid Grid.Row="2" x:Name="TextMarkupGrid"  IsVisible="false" HeightRequest="40" BackgroundColor="#FFF6F6F6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{OnPlatform Default=Auto, Android=1*, iOS=1*}"/>
                    <ColumnDefinition Width="{OnPlatform Default=*, Android=1*, iOS=1*}"/>
                </Grid.ColumnDefinitions>
                <HorizontalStackLayout 
                        Grid.Column="0" Margin="8,0,0,0" x:Name="TextMarkupIcons" IsVisible="{Binding Path=IsVisible,Source={x:Reference TextMarkupGrid}}"
                    Spacing="8"
                        HorizontalOptions="Start">

                    <Button Text="&#xe760;" FontSize="16" x:Name="Highlight" FontFamily="Maui Material Assets" Clicked="HighlightClicked"/>
                    <Button Text="&#xe762;" FontSize="18" x:Name="Underline" FontFamily="Maui Material Assets" Clicked="UnderlineClicked"/>
                    <Button Text="&#xe763;" FontSize="18" x:Name="StrikeOut" FontFamily="Maui Material Assets" Clicked="StrikeOutClicked"/>
                    <Button Text="&#xe765;" FontSize="18" x:Name="Squiggly" FontFamily="Maui Material Assets" Clicked="SquigglyClicked"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout 
                        Grid.Column="1" Margin="8,0,12,0" x:Name="EditOptions" PropertyChanged="EditOption_PropertyChanged"
                        HorizontalOptions="End">
                    <Button x:Name="Lock" IsVisible="false" Text="&#xe77b;" FontSize="18" FontFamily="Maui Material Assets"  Clicked="LockUnlock_Clicked" Margin="0,0,0,2"/>
                    <Button x:Name="Unlock" IsVisible="false" Text="&#xe77c;" FontSize="18" FontFamily="Maui Material Assets" Clicked="LockUnlock_Clicked" Margin="0,0,0,2"/>
                    <Button Text="&#xe70f;" IsVisible="false" Margin="8,0,0,0" FontSize="18" x:Name="Delete" FontFamily="Maui Material Assets" Clicked="Delete_Clicked"/>
                    <Button  Text="&#xe767;" IsVisible="false" Margin="8,0,0,0"  FontSize="16" x:Name="ColorPalette" FontFamily="Maui Material Assets" Clicked="ColorPalette_Clicked"/>
                </HorizontalStackLayout>
            </Grid>
            <Line Grid.Row="1" StrokeThickness="1" BackgroundColor="#33000000"/>
            <Line Grid.Row="3" StrokeThickness="1" IsVisible="{Binding Path=IsVisible,Source={x:Reference TextMarkupGrid}}" BackgroundColor="#33000000"/>
            <syncfusion:SfPdfViewer
                    x:Name="PdfViewer"
                    Grid.Row="4"
                    ShowToolbars="False"
                    DocumentSource="{Binding PdfDocumentStream}">
            </syncfusion:SfPdfViewer>
            <local:TextMarkupEditor
                x:Name="textMarkupEditor" BackgroundColor="#FFF6F6F6"  HorizontalOptions="End" VerticalOptions="Start" Grid.Row="4"
                IsVisible="False"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>