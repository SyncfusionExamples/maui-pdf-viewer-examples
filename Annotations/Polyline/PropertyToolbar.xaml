<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PolylineAnnotationDemo.PropertyToolbar"
            >
    <Grid  x:Name="ColorGrid" RowDefinitions="0.5*,1*,0.5*,1*,0.5*,1*,0.25*">
        <Label Padding="7"  Grid.Row="0" Text="Color" FontSize="10" TextColor="Black" HorizontalOptions="Start" VerticalOptions="End"></Label>
        <Picker  Margin="7"  Grid.Row="1" x:Name="colorPicker" VerticalOptions="Center" HorizontalOptions="StartAndExpand" ></Picker>
        <Label Padding="7"  Grid.Row="2" Text="Opacity" FontSize="10" TextColor="Black" HorizontalOptions="Start" VerticalOptions="Start"></Label>
        <Slider Grid.Row="3" x:Name="OpacSlider" Minimum="1" Maximum="15" ThumbColor="Black"  VerticalOptions="Center" ValueChanged = "ValueChanged" WidthRequest="150" BackgroundColor="Black"></Slider>
        <Label Padding="7" Grid.Row="4" Text="Thickness" FontSize="10" TextColor="Black" HorizontalOptions="Start" VerticalOptions="End"></Label>
        <Slider Grid.Row="5" x:Name="colorSlider" Minimum="1" Maximum="15" ThumbColor="Black" VerticalOptions="Center" ValueChanged = "ValueChanged" WidthRequest="150" BackgroundColor="Black"></Slider>
    </Grid>
    
</ContentView>