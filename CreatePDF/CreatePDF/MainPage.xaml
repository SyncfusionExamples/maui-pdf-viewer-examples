<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PdfViewer;assembly=Syncfusion.Maui.PdfViewer"
             x:Class="CreatePDF.MainPage">

    <Grid RowDefinitions="45,*">
        <Grid BackgroundColor="#FFF7F2FB">
            <HorizontalStackLayout HorizontalOptions="Center">
                <Button x:Name="Preview" Text="Preview" FontSize="20" FontFamily="Maui Material Assets" Background="Transparent" TextColor="#1C1B1F" Clicked="Preview_Clicked"></Button>
            </HorizontalStackLayout>
        </Grid>
        <syncfusion:SfPdfViewer Grid.Row="1" x:Name="PdfViewer"></syncfusion:SfPdfViewer>
    </Grid>

</ContentPage>
